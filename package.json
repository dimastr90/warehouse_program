    "mern",
    "react"
  ],
  "author": "Dima Stronov <dimastr90@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "config": "^3.3.1",
    "express": "^4.17.3",
    "express-validator": "^6.5.0",
    "mongoose": "^5.9.18"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.4",
    "prettier": "2.0.5"
  },
  "prettier": {
    "tabWidth": 4
  }
}
